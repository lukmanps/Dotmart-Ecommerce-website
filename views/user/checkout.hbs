<main class="main">
	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
		<div class="container">
			<h1 class="page-title" style="font-weight: 500;">Checkout.</h1>
		</div><!-- End .container -->
	</div><!-- End .page-header -->
	<nav aria-label="breadcrumb" class="breadcrumb-nav">
		<div class="container">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="/">Home</a></li>
				<li class="breadcrumb-item"><a href="/cart">Shopping Cart</a></li>
				<li class="breadcrumb-item active" aria-current="page">Checkout</li>
			</ol>
		</div><!-- End .container -->
	</nav><!-- End .breadcrumb-nav -->

	<div class="page-content">

		<div class="checkout">
			<div class="container">

				<form action="/checkout" method="post" onsubmit="return validateForm()" id="checkout-form">
					<input type="text" name="userId" id="" value="{{user._id}}" hidden>
					{{#each address}}
					{{#if this.default}}

					<div class="row">
						<div class="col-lg-9">
							<h2 class="checkout-title">Billing Details</h2><!-- End .checkout-title -->
							<div class="row">
								<div class="col-sm-6">
									<label>Full Name</label>
									<input type="text" class="form-control" name="orderName" value="{{this.name}}"
										required>
								</div><!-- End .col-sm-6 -->

							</div><!-- End .row -->


							<label>Address *</label>
							<input type="text" class="form-control" placeholder="House number and Street name"
								name="orderAddress" value="{{this.address}}" required>

							<div class="row">
								<div class="col-sm-4">
									<label>Town / City </label>
									<input type="text" class="form-control" value="{{this.town}}">
								</div><!-- End .col-sm-6 -->

								<div class="col-sm-4">
									<label>State</label>
									<input type="text" class="form-control" value="{{this.state}}">
								</div><!-- End .col-sm-6 -->
								<div class="col-sm-4">
									<label>County </label>
									<input type="text" class="form-control" value="{{this.country}}">
								</div><!-- End .col-sm-6 -->
							</div><!-- End .row -->

							<div class="row">
								<div class="col-sm-6">
									<label>Postcode / ZIP *</label>
									<input type="text" class="form-control" name="orderPIN" value="{{this.pin}}"
										required>
								</div><!-- End .col-sm-6 -->

								<div class="col-sm-6">
									<label>Phone *</label>
									<input type="tel" class="form-control" name="orderMob" value="{{this.phone}}"
										required>

								</div><!-- End .col-sm-6 -->
							</div><!-- End .row -->

							<div class="link"><a href="/address">Change Address?</a></div>

							{{/if}}
							{{/each}}
						</div><!-- End .col-lg-9 -->
						<aside class="col-lg-3">
							<div class="checkout-discount">
								<input type="text" class="form-control" id="couponCode"
									placeholder="Have Coupon? Enter here">
								<button type="button" class="btn btn-outline-primary-2 btn-order btn-block"
									onclick="applyCoupon({{total}})">Apply</button>
								<P for="couponErr" class="text-start" id="couponErr" style="color:rgb(180, 17, 17)"></P>
								<p for="couponSuccess" class="text-start" id="couponSuccess"
									style="color:rgb(22, 131, 22)"></p>
								<p><a href="/all-coupons"><small><b>All Coupons ></b></small></a></p>
							</div><!-- End .checkout-discount -->
							<div class="summary">
								<h3 class="summary-title">Your Order.</h3><!-- End .summary-title -->

								<table class="table table-summary">
									<thead>
										<tr>
											<th>Product</th>
											<th>Quantity</th>
										</tr>
									</thead>

									<tbody>
										{{#each products}}
										<tr>
											<td><a href="#">{{this.product.productTitle}}</a></td>
											<td>{{this.quantity}}</td>
										</tr>
										{{/each}}
										<tr class="summary-subtotal">
											<td>Subtotal:</td>
											<td>&#x20B9;{{total}}</td>
										</tr><!-- End .summary-subtotal -->
										<tr>
											<td>Total:</td>
											<td id="netTotal">&#x20B9;{{total}}</td>
										</tr>
										<tr>
											<td>Shipping:</td>
											<td>Free</td>
										</tr>
										<tr>
											<td>Coupon:</td>
											<td id="couponApplied"></td>
										</tr>
										<tr>
											<td>Discount:</td>
											<td id="couponDisAmount">-</td>
										</tr>


										<tr class="summary-total">
											<td>Total:</td>
											<td id="totalPrice">&#x20B9;{{total}}</td> 
										</tr><!-- End .summary-total -->
									</tbody>
								</table><!-- End .table table-summary -->

								<div class="accordion-summary" id="accordion-payment">
									<h5>Payment method</h5>
									<div class="custom-control custom-radio">

										<input id="cod" value="COD" name="paymentMethod" type="radio"
											class="custom-control-input">
										<label class="custom-control-label" for="cod">Cash On Delivery</label>
									</div>

									<div class="custom-control custom-radio">
										<input id="online-payment" value="Paypal" name="paymentMethod" type="radio"
											class="custom-control-input">
										<label class="custom-control-label" for="online-payment">Paypal</label>
										<input type="text" class="form-control" id="paypalAmount" name="totalAmount" value="{{total}}">

									</div>



									<button type="submit" class="btn btn-outline-primary-2 btn-order btn-block"
										id="order-button">
										<span class="btn-text">Place Order</span>
										<span class="btn-hover-text">Proceed to Checkout</span>
									</button>

									{{#if paymentErr}}
									<label class="errorLabel text-danger">Enter Valid Payment Method</label>
									{{/if}}
								</div><!-- End .summary -->
						</aside><!-- End .col-lg-3 -->
					</div><!-- End .row -->

				</form>
			</div><!-- End .container -->
		</div><!-- End .checkout -->
	</div><!-- End .page-content -->
</main><!-- End .main -->
<script>
function validateForm(){
	var radios = document.getElementsByName('paymentMethod');
	var formValid = false;

	var i = 0;
	while(!formValid && i < radios.length){
		if(radios[i].checked){
			formValid = true;
			i++;
		}

		if(!formValid) alert("Please Select a Payment Method");

		return formValid;
	}
}	
</script>