<section>
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Ordered Products.</h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ordered Products</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <table class="table table-wishlist table-mobile">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>ََQuantity</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="product-col">
                                        <div class="product">
                                            <figure class="product-media">
                                                <a href="">
                                                    <img src="../db/product-images/{{this.product.productImage.[0]}}"
                                                        alt="Product image">
                                                </a>
                                            </figure>

                                            <h3 class="product-title">
                                                <a href="">{{this.product.productTitle}}</a>
                                            </h3><!-- End .product-title -->
                                        </div><!-- End .product -->
                                    </td>
                                    <td class="price-col">&#x20B9;{{this.product.productPrice}}</td>
                                    <td class="price-col">{{this.quantity}}</td>



                                </tr>
                                {{/each}}
                            </tbody>
                        </table><!-- End .table table-wishlist -->
                    </div>
                    <aside class="col-lg-3">
                            <div class="summary summary-cart">
                                <h3 class="summary-title">Order Details</h3><!-- End .summary-title -->

                                <table class="table table-summary">
                                    <tbody>
                                        <tr class="summary-shipping">
                                            <td>Ordered Date:</td>
                                            <td>&nbsp;</td>
                                        </tr><!-- End .summary-subtotal -->
                                        <tr class="summary-shipping-row">
                                            <td>{{orderDetails.date}}</td>
                                            <td>&nbsp;</td>
                                        </tr><!-- End .summary-subtotal -->
                                        <tr class="summary-shipping">
                                            <td>Shipping Address:</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr class="summary-shipping-row">
                                            <td>{{orderDetails.deliveryDetails.address}}</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr class="summary-shipping">
                                            <td>Payment Method: </td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr class="summary-shipping-row">
                                            <td>{{orderDetails.paymentMethod}}</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr class="summary-shipping">
                                            <td>Order Status:</td>
                                            <td class="custom-control-label" >{{orderDetails.status}}</td>
                                        </tr>
                                
                                        <tr class="summary-total">
                                            <td>Total: </td>
                                            <td><span id="totalPrice"><b>&#x20B9;{{orderDetails.totalAmount}}</b></span></td>
                                        </tr><!-- End .summary-total -->
                                    </tbody>
                                </table><!-- End .table table-summary -->

                                {{#if delivered}}
                                <button class="btn btn-outline-primary-2 btn-order btn-block" onclick="returnOrder('{{orderDetails.orderId}}')">Return</button>
                                {{/if}}
                                {{#if placed}}
                                <button class="btn btn-outline-primary-2 btn-order btn-block" onclick="cancelOrder('{{orderDetails.orderId}}')">Cancel</button>
                                {{/if}}
                                {{#if returned}}

                                {{/if}}
                                {{#if cancelled}}

                                {{/if}}
                               
                               
                            </div><!-- End .summary -->

                            <a href="/" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE
                                    SHOPPING</span><i class="icon-refresh"></i></a>
                        </aside><!-- End .col-lg-3 -->
                </div>
            </div><!-- End .container -->
        </div><!-- End .page-content -->
    </main><!-- End .main -->

</section>