                        <div class="col-md-6">
                            <div class="product-gallery product-gallery-vertical">
                                <div class="row">
                                    <figure class="product-main-image">
                                        <img id="product-zoom" src="../db/product-images/{{products.productImage.[0]}}"
                                            data-zoom-image="../db/product-images/{{products.productImage.[0]}}"
                                            alt="product image">

                                        <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                            <i class="icon-arrows"></i>
                                        </a>
                                    </figure><!-- End .product-main-image -->

                                    <div id="product-zoom-gallery" class="product-image-gallery">
                                        <a class="product-gallery-item active" href="#"
                                            data-image="../db/product-images/{{products.productImage.[0]}}"
                                            data-zoom-image="../db/product-images/{{products.productImage.[0]}}">
                                            <img src="../db/product-images/{{products.productImage.[0]}}" alt="product side">
                                        </a>

                                        <a class="product-gallery-item" href="#"
                                            data-image="../db/product-images/{{products.productImage.[1]}}"
                                            data-zoom-image="../db/product-images/{{products.productImage.[1]}}">
                                            <img src="../db/product-images/{{products.productImage.[1]}}" alt="product cross">
                                        </a>

                                        <a class="product-gallery-item" href="#"
                                            data-image="../db/product-images/{{products.productImage.[2]}}"
                                            data-zoom-image="../db/product-images/{{products.productImage.[2]}}">
                                            <img src="../db/product-images/{{products.productImage.[2]}}"
                                                alt="product with model">
                                        </a>

                                        <a class="product-gallery-item" href="#"
                                            data-image="../db/product-images/{{products.productImage.[3]}}"
                                            data-zoom-image="../db/product-images/{{products.productImage.[3]}}">
                                            <img src="../db/product-images/{{products.productImage.[3]}}" alt="product back">
                                        </a>
                                    </div><!-- End .product-image-gallery -->
                                </div><!-- End .row -->
                            </div><!-- End .product-gallery -->
                        </div><!-- End .col-md-6 -->

                        <div class="col-md-6">
                            <div class="product-details">
                                <h1 class="product-cat">{{products.productBrand}}</h1><!-- End .product-title -->
                                <h1 class="product-title">{{products.productTitle}}</h1><!-- End .product-title -->

                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-val" style="width: 80%;"></div><!-- End .ratings-val -->
                                    </div><!-- End .ratings -->
                                    <a class="ratings-text" href="#product-review-link" id="review-link">( 2 Reviews
                                        )</a>
                                </div><!-- End .rating-container -->

                                <div class="product-price">
                                    &#x20B9;{{products.productPrice}}
                                </div><!-- End .product-price -->

                                <div class="product-content">
                                    <p>{{products.productDescription}}</p>
                                </div><!-- End .product-content -->

                                <div class="details-filter-row details-row-size">
                                    <label for="size">Size:</label>
                                    <div class="select-custom">
                                        <select name="size" id="size" class="form-control">
                                            <option value="#" selected="selected">Select a size</option>
                                            <option value="s">Small</option>
                                            <option value="m">Medium</option>
                                            <option value="l">Large</option>

                                        </select>
                                    </div><!-- End .select-custom -->

                                    {{!-- <a href="#" class="size-guide"><i class="icon-th-list"></i>size guide</a> --}}
                                </div><!-- End .details-filter-row -->

                                <div class="details-filter-row details-row-size">
                                    <label for="qty">Qty:</label>
                                    <div class="product-details-quantity">
                                        <input type="number" id="qty" class="form-control" value="1" min="1" max="10"
                                            step="1" data-decimals="0" required>
                                    </div><!-- End .product-details-quantity -->
                                </div><!-- End .details-filter-row -->

                                <div class="product-details-action">
                                    <button class="btn btn-product btn-cart" onclick="addToCart('{{products._id}}')">Add to Cart</button>

                                    <div class="details-action-wrapper">
                                       <button class="btn btn-outline btn-product btn-wishlist" onclick="addToWishlist('{{products._id}}')" style="height: 40px; width: auto;">Add to Wishlist</button>

                                        {{!-- <a href="#" class="btn-product btn-compare" title="Compare"><span>Add to
                                                Compare</span></a> --}}
                                    </div><!-- End .details-action-wrapper -->
                                </div><!-- End .product-details-action -->

                                <div class="product-details-footer">
                                    <div class="product-cat">
                                        <span>Category:</span>
                                        <a href="#">{{products.productCategory}}</a>
                                        {{!-- <a href="#">Dresses</a>,
                                        <a href="#">Yellow</a> --}}
                                    </div><!-- End .product-cat -->

                                    <div class="social-icons social-icons-sm">
                                        <span class="social-label">Share:</span>
                                        <a href="#" class="social-icon" title="Facebook" target="_blank"><i
                                                class="icon-facebook-f"></i></a>
                                        <a href="#" class="social-icon" title="Twitter" target="_blank"><i
                                                class="icon-twitter"></i></a>
                                        <a href="#" class="social-icon" title="Instagram" target="_blank"><i
                                                class="icon-instagram"></i></a>
                                        <a href="#" class="social-icon" title="Pinterest" target="_blank"><i
                                                class="icon-pinterest"></i></a>
                                    </div>
                                </div><!-- End .product-details-footer -->
