<script>
    let orderStatus = ["Delivered", "Placed", "Cancelled", "Shipped", "Returned"];
    let orderCount = [{{dashboardData.DeliveredCount}}, {{dashboardData.PlacedCount}}, {{dashboardData.CanceledCount}}, {{dashboardData.PendingCount}}];
    var barColors = [
        "#b91d47",
        "#00aba9",
        "#2b5797",
        "#e8c3b9",
        "#1e7145"
    ];

    new Chart("pieChart", {
        type: "doughnut",
        data: {
            labels: orderStatus,
            datasets: [{
                backgroundColor: barColors,
                data: orderCount
            }]
        },
        options: {
            title: {
                display: true,
                text: "World Wide Wine Production 2018"
            }
        }
    });
</script>