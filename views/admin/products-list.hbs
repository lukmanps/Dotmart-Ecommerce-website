<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List.</h2>
            <p>View Products, Edit and Delete</p>
        </div>
        <div>
            {{!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
            <a href="#" class="btn btn-light rounded  font-md">Import</a> --}}
            <a href="/admin/add-products" class="btn btn-primary btn-sm rounded">Add</a>
        </div>
    </div>
    <div class="card mb-4">
       
        
        
        <div class="card-body">
            {{#each products}}
            <article class="itemlist">
                
                <div class="row align-items-center">
                    
                    <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                        <a class="itemside">
                            <div class="left">
                                <img src="/db/product-images/{{this.productImage.[0]}}" class="img-sm " alt="product Image">
                                
                            </div>
                            <div class="info">
                                <h6 class="mb-0">{{this.productTitle}}</h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-description"> <span>{{this.productDescription}}</span> </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-price"> <span>&#x20B9;{{this.productPrice}}</span> </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-status">
                        <span class="badge rounded-pill alert-success">{{this.productStatus}}</span>
                    </div>
                    
                    <div class="col-lg-2 col-sm-2 col-4 col-dropdown text-end">
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-md rounded font-sm" >Edit</a>

                    {{#if this.status}}
                    <a href="/admin/unlist-product/{{this._id}}" class="btn btn-danger font-sm">Unlist</a>
                    {{else}}
                    <a href="/admin/listBack-product/{{this._id}}" class="btn btn-success font-sm">List</a>
                    {{/if}}
                    </div>
                    {{!-- <div class="dropdown col-lg-2 col-sm-2 col-4 col-dropdown text-end">
                            <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i
                                    class="material-icons md-more_horiz"></i>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/admin/edit-product/{{this._id}}">Edit</a>
                                <a class="dropdown-item" href="/admin/delete-product/{{this._id}}"  onclick="return confirm('Do you want to delete {{this.productTitle}}')">Delete</a>
                                
                            </div>
                    </div> <!-- dropdown //end --> --}}
                    
                </div> <!-- row .// -->
                
            </article> <!-- itemlist  .// -->
            {{/each}}

        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    <div class="pagination-area mt-30 mb-50">
        
    </div>
</section> <!-- content-main end// -->